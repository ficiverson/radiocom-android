<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/app_bar_marginTop"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/report_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/programName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/report_programName"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/accountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/programName"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/account"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateCreate_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accountName"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/report_dateCreate"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accountName"
                android:layout_toRightOf="@+id/dateCreate_head"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/report_dateCreate"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tidy_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateCreate"
                android:layout_marginLeft="10dp"
                android:text="@string/report_tidy"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tidy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateCreate"
                android:layout_toRightOf="@+id/tidy_head"
                android:layout_marginLeft="10dp"
                android:text="@string/default_value"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dirt_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tidy_head"
                android:layout_marginLeft="10dp"
                android:text="@string/report_dirt"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tidy_head"
                android:layout_toRightOf="@+id/dirt_head"
                android:layout_marginLeft="10dp"
                android:text="@string/default_value"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/configuration_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dirt_head"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/report_configuration"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/configuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dirt_head"
                android:layout_toRightOf="@+id/configuration_head"
                android:layout_marginLeft="10dp"
                android:text="@string/default_value"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/openDoor_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/configuration_head"
                android:text="@string/report_openDoor"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/openDoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/openDoor_head"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/default_value"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/viewMembers_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/openDoor"
                android:layout_marginLeft="10dp"
                android:text="@string/report_viewMembers"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/viewMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/viewMembers_head"
                android:text="@string/default_value"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/location_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewMembers"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/report_location"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/location"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/viewMembers"
                android:layout_toRightOf="@+id/location_head"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:text="@string/default_value"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/description_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_head"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:text="@string/report_description"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/description"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/description_head"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:text="@string/no_content"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/dateRevision_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/report_dateRevision"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateRevision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_toRightOf="@+id/dateRevision_head"
                android:layout_marginLeft="10dp"
                android:text="@string/report_dateRevision"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/active_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateRevision_head"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/report_active"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/dateRevision_head"
                android:layout_toRightOf="@+id/active_head"
                android:text="@string/default_value"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/active_head"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:text="@string/report_answer"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/answer_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/answer_head"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/white"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="10"
                android:minLines="6"
                android:scrollbars="vertical"
                android:maxLength="500"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/answer"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer_new"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/answer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer"
                android:layout_weight="1"
                android:text="@string/report_send_answer"
                android:theme="@style/ThemeOverlay.ButtonApp" />

            <TextView
                android:id="@+id/photos_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/answer_button"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:text="@string/report_photos"
                android:textSize="20sp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/images_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/report_info"
            android:orientation="vertical"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>